<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kings.mid_term_project.Activities.DetailActivity"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/homepage_cover"
        android:outlineProvider="bounds"
        android:elevation="10dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/detail_icon"
            android:src="@mipmap/caocao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:outlineProvider="bounds"
            android:elevation="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_name"
            android:text="曹操"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:outlineProvider="bounds"
            android:elevation="20dp" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/detail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_gender"
            android:text="性别：男"
            android:textSize="24sp"
            android:padding="12dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/detail_divider1"
            android:background="#000000"
            app:layout_constraintLeft_toRightOf="@id/detail_gender"
            app:layout_constraintTop_toTopOf="@id/detail_gender"
            app:layout_constraintBottom_toBottomOf="@id/detail_gender"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_category"
            android:text="人物类别：史实人物"
            android:textSize="24sp"
            android:padding="12dp"
            app:layout_constraintLeft_toRightOf="@id/detail_divider1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/detail_divider2"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/detail_gender"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_time"
            android:text="生卒年月：2007-2017"
            android:textSize="24sp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/detail_divider2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/detail_divider3"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/detail_time"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_descripion_title"
            android:text="简介："
            android:textSize="24sp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/detail_divider3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_descripion"
            app:layout_constraintTop_toBottomOf="@id/detail_descripion_title"
            android:text="人称卧龙先生，曾被三顾茅庐，是个法师，使用技能会有多个魔法球围绕在身边"
            android:textSize="16sp"
            android:padding="12dp"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>